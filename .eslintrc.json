{
    "plugins": [
        "prettier"
    ],
    "extends": [
        "airbnb",
        "plugin:prettier/recommended"
    ],

    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": false
        }
    },

    "env": {
        "browser": false,
        "node": true
    },
    "ignorePatterns": [
        "node_modules/"
    ],

    "rules": {
        "prettier/prettier": "error"
    }
}